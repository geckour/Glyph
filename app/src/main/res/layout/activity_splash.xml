<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="SETTING"
            android:id="@+id/button1"
            android:background="@drawable/button"
            android:textSize="20sp"
            android:textColor="@color/button_text"
            android:onClick="onClickSetting"
            android:fontFamily="\@"
            android:layout_marginStart="@dimen/splash_side_margin"
            android:paddingLeft="@dimen/button_padding"
            android:paddingRight="@dimen/button_padding"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="HACK"
            android:id="@+id/button2"
            android:background="@drawable/button"
            android:textSize="20sp"
            android:textColor="@color/button_text"
            android:onClick="onClickStart"
            android:fontFamily="\@"
            android:layout_marginEnd="@dimen/splash_side_margin"
            android:paddingLeft="@dimen/button_padding"
            android:paddingRight="@dimen/button_padding"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEAKNESS"
            android:id="@+id/button4"
            android:layout_below="@+id/button2"
            android:layout_alignEnd="@+id/button2"
            android:paddingLeft="@dimen/button_padding"
            android:paddingRight="@dimen/button_padding"
            android:fontFamily="\@"
            android:textSize="20sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/button"
            android:textColor="@color/button_text"
            android:onClick="onClickWeakness"/>
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DICTIONARY"
        android:id="@+id/button3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/splash_side_margin"
        android:layout_marginBottom="@dimen/splash_side_margin"
        android:paddingLeft="@dimen/button_padding"
        android:paddingRight="@dimen/button_padding"
        android:fontFamily="\@"
        android:textSize="20sp"
        android:background="@drawable/button"
        android:textColor="@color/button_text"
        android:onClick="onClickDictionary"/>

</RelativeLayout>